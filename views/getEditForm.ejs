<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Employee</title>
</head>
<body style="background-color: orange;">
  <div class="container" style="margin-top: 50px;">
    <form method="POST" action="/employees/edit/<%= data.id %>" style="background-color: white; padding: 20px;">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="name" value="<%= data.name %>" >
  </div>
  <div class="mb-3">
    <label for="position" class="form-label">Position :</label>
    <select class="form-select" aria-label="default" id="position" name="position" value="<%= data.position %>">
  <option slected disabled>Position</option>
  <% const position=["CEO","CMO","CTO","CFO","Product Manager"] %>
  <% position.forEach(element => { %>
    <option value="<%= element %>"><%= element %></option>
    <%}) %>
</select>
  </div>
  <div class="mb-3">
    <label for="education" class="form-label">Education :</label>
    <select class="form-select" aria-label="default" id="education" name="education" value="<%= data.education %>">
  <option slected disabled>Education</option>
  <% const education=["Bachelor Degree","Master Degree"] %>
  <% education.forEach(element => { %>
    <option value="<%= element %>"><%= element %></option>
    <%}) %>
</select>
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" id="email" name="email" placeholder="email" value="<%= data.email %>">
  </div>
  <div class="mb-3">
    <label for="phone_number" class="form-label">Phone Number</label>
    <input type="number" class="form-control" id="phone_number" name="phone_number" placeholder="phone number" value="<%= data.phone_number %>">
  </div>
  <div class="mb-3">
    <label for="profile_picture" class="form-label">Profile Picture</label>
    <input type="text" class="form-control" id="profile_picture" name="profile_picture" placeholder="profile_picture" value="<%= data.profile_picture %>">
  </div>
  <div class="mb-3">
    <label for="age" class="form-label">Age</label>
    <input type="number" class="form-control" id="age" name="age" placeholder="age"  value="<%= data.age %>">
  </div>
  <div class="text-center">
    <button type="submit" class="btn bg-white text-warning border border-warning" style=" width: 150px;">Edit</button>
  </div>
</form>
<%- include('layout/bootstrap') %>
  </div>
</body>
</html>